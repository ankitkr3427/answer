3. def create_pyramid(height):
    for i in range(height):
        print(' ' * (height - i - 1) + '*' * (2 * i + 1))

def create_reverse_pyramid(height):
    for i in range(height):
        print('*' * (2 * i + 1) + ' ' * (height - i - 1)))

# example usage
height = 5
create_pyramid(height)
create_reverse_pyramid(height)
